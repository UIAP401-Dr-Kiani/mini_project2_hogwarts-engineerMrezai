<Window x:Class="hogward.Windows.Professor.ProfessorDesk"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:hogward.Windows.Professor"
        mc:Ignorable="d"
        Title="ProfessorDesk" Height="600" Width="800" WindowStartupLocation="CenterScreen" WindowStyle="None" ResizeMode="NoResize">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Windows/Professor/3346893.jpg"/>
        </Grid.Background>
        <Button Content="Lesson Selection" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,50,0,0" x:Name="LessonSelction" Click="LessonSelction_Click" Height="54" Width="153" Background="#FFB5179E" BorderBrush="#FFB5179E" Foreground="#FF560BAD" />
        <Button Content="HomeWork" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,109,0,0" x:Name="HomeWork" Click="HomeWork_Click" Height="54" Width="153" Background="#FFB5179E" BorderBrush="#FFB5179E" Foreground="#FF560BAD"/>
        <Button Content="logout" x:Name="Logout" HorizontalAlignment="Left" Margin="10,168,0,0" VerticalAlignment="Top" Width="153" Height="41" Background="#FFB5179E" BorderBrush="#FFB5179E" Foreground="#FF560BAD" Click="Logout_Click"/>
    </Grid>
</Window>
